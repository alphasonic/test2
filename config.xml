<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id="com.example.hello"
        version="0.0.2">
	<name>Sushiline</name>
	<description>Commandez vos sushi online</description>
	<author email="thomassart@gmail.com" href="#">Developer Team</author>
	<content src="index.html" />
	<access origin="*" />
	<preference name="fullscreen" value="true" />
	<preference name="WebViewBounce" value="false" />
	<preference name="orientation" value="portrait" />
	<preference name="detect-data-types" value="true" />
	<preference name="phonegap-version" value="3.1.0" />
	
	<access origin="http://www.shopiready.com" subdomains="true" />
	<gap:platform name="ios" />
	
	<icon src="images/icon.png" gap:platform="ios" width="114" height="114"/>
	
	<gap:splash src="images/splash.png" gap:platform="ios" width="320" height="480" />
	<gap:splash src="images/splash_2x.png" gap:platform="ios" width="640" height="960" />
	<gap:splash src="images/splash_iphone5.png" gap:platform="ios" width="640" height="1136" />
</widget>
